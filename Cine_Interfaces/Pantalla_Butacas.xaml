<Window x:Class="Cine_Interfaces.Pantalla_Butacas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sala de Cine" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/fondo_vacio.jpeg"/>
        </Grid.Background>
        <!-- Rectángulo que representa la pantalla -->
        <Rectangle Fill="Gray" Height="40" VerticalAlignment="Top" Margin="20,20,20,0"/>
        <TextBlock Text="Pantalla" Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <Image Source="Images/volver.png" 
       HorizontalAlignment="Right" VerticalAlignment="Top" 
       Margin="0,644,10,0" Width="50" Height="50" 
       Cursor="Hand" MouseLeftButtonDown="Volver_Click" RenderTransformOrigin="-0.66,12.501"/>

        <!-- Contenedor para los botones que representan las butacas -->
        <Grid Name="ButacasGrid" Margin="120,180,120,120">
            <!-- Definición de filas y columnas -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>

        <!-- Botón Confirmar -->
        <Button Content="Confirmar" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="0,0,0,30" Width="100" Height="40" Click="Confirmar_Click"/>
        
    </Grid>
</Window>
